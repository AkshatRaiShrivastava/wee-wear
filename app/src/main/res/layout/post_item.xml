<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header">

        <ImageView
            android:layout_width="32dp"
            android:layout_centerVertical="true"
            android:layout_height="32dp"
            android:id="@+id/post_user_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="10pt"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/three_dots_icon"
            android:id="@+id/username_text"
            android:layout_toRightOf="@id/post_user_icon"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/dots"
            android:id="@+id/three_dots_icon"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_below="@id/header">
        <ImageView
            android:backgroundTint="@color/white"
            android:id="@+id/post_image_carousel"
            android:layout_centerHorizontal="true"
            android:layout_width="350dp"
            android:layout_height="170dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_image_carousel"
            android:text="Title"
            android:padding="2dp"
            android:textSize="7pt"
            android:id="@+id/title_text_view"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text_view"
            android:text="Subtitle"
            android:padding="2dp"
            android:textSize="5pt"
            android:id="@+id/subtitle_text_view"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like_icon"
            android:layout_marginStart="10dp"
            android:layout_below="@id/subtitle_text_view"
            android:layout_marginTop="5dp"
            android:id="@+id/like_btn"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/liked_icon"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_below="@id/subtitle_text_view"
            android:layout_marginTop="5dp"
            android:id="@+id/liked_btn"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/send_icon"
            android:layout_below="@id/subtitle_text_view"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:id="@+id/send_btn"/>
    </RelativeLayout>



</RelativeLayout>